[BBDrivers_Device.NT.Wdf]
KmdfService =  BBDrivers, BBDrivers_wdfsect
[BBDrivers_wdfsect]
KmdfLibraryVersion = 1.15

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
ClassName="Samples" ; TODO: edit ClassName
DiskName = "BBDrivers Installation Disk"
BBDrivers.DeviceDesc = "BBDrivers Device"
BBDrivers.SVCDESC = "BBDrivers Service"
Media_Description = "BBRemote"
