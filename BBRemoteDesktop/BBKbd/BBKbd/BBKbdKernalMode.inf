;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%BBKbdKernalMode.DeviceDesc%=BBKbdKernalMode_Device, Root\BBKbdKernalMode ; TODO: edit hw-id

[BBKbdKernalMode_Device.NT]
;CopyFiles=BBKbdKernalMode_CopyMetadata
CopyFiles=Drivers_Dir

[Drivers_Dir]
BBKbdKernalMode.sys

;[BBKbdKernalMode_CopyMetadata]
;3c9858e2-4316-4ef5-be9b-b0118dd43383.devicemetadata-ms,,,0x00000800 ; using autogenerated metadata guid

;[DestinationDirs]
;BBKbdKernalMode_CopyMetadata = 24, \ProgramData\Microsoft\Windows\DeviceMetadataStore\en-US ;

[BBKbdKernalMode_Device.NT.HW]  
AddReg = BBKbdKernalMode_Device.NT.AddReg  
  
[BBKbdKernalMode_Device.NT.AddReg]  
HKR,,"LowerFilters",0x00010000,"vhf"
;HKR,,DeviceType,0x10001,0x0000000b  ; 0x0b = FILE_DEVICE_KEYBOARD

;-------------- Service installation
[BBKbdKernalMode_Device.NT.Services]
AddService = BBKbdKernalMode,%SPSVCINST_ASSOCSERVICE%, BBKbdKernalMode_Service_Inst

; -------------- BBKbdKernalMode driver install sections
[BBKbdKernalMode_Service_Inst]
DisplayName    = %BBKbdKernalMode.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\BBKbdKernalMode.sys

