CatalogFile=BBKbdKernalMode.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages

[DestinationDirs]
DefaultDestDir = 12

; ================= Class section =====================

[SourceDisksNames]
1 = %DiskName%,,,""
;2 = %Media_Description%,,,\MetadataPackage ;

[SourceDisksFiles]
